#!/usr/bin/bash

sudo cp -r /etc/udev/rules.d \
    /etc/systemd/system/unplug.service \
    ~/dotfiles/linux/

sudo cp -r ~/.config/nvim \
    ~/.config/ghostty \
    ~/.config/opencode \
    ~/.config/yazi \
    ~/.zshrc \
    ~/.tmux.conf \
    ~/dotfiles/

cp -r ~/.config/hypr \
    ~/.config/waybar \
    ~/.config/tofi \
    ~/.config/swappy \
    ~/.config/dolphinrc \
    ~/.config/scripts \
    ~/.config/zathura \
    ~/.config/wireplumber \
    ~/.config/brave-flags.conf \
    ~/.themes \
    ~/.icons \
    ~/dotfiles/linux/
